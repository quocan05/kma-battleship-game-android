<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggame"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/game_logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:contentDescription="Game Logo"
        android:src="@drawable/gamelogo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"> <!-- Optional margin to separate logo from buttons -->

        <Button
            android:id="@+id/single"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/army_button_background"
            android:fontFamily="sans-serif-black"
            android:padding="12dp"
            android:text="Single Player"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/multi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/army_button_background"
            android:fontFamily="sans-serif-black"
            android:padding="12dp"
            android:text="Multi-player"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/history"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/army_button_background"
            android:fontFamily="sans-serif-black"
            android:padding="12dp"
            android:text="History"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
